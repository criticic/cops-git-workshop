---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white text-black font-mono h-screen flex flex-col justify-between">
    <slot />
	<footer class="bg-black text-white p-4 text-center mt-4">
	  <p>Made with ❤️ by COPS, IIT (BHU) Varanasi</p>
	</footer>
  </body>
</html>
